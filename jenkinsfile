pipeline {
    agent any
    stages {
        stage('git checkout') {
            steps {
                echo 'git checkout...'
                sleep time: 3, unit: 'SECONDS' // Simulate a git checkout that lasts for 4 seconds
            }
        }
        
        stage('Build') {
            steps {
                echo 'Sbuilding the application'
                sleep time: 15, unit: 'SECONDS' // Simulate a build that lasts for 20 seconds
            }
        }
        // Add other stages as needed nothing hjzv ih 
    }
}
